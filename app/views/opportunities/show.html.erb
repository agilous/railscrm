<div class="max-w-4xl mx-auto py-8">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @opportunity.opportunity_name %></h1>
      <div class="flex space-x-3">
        <%= link_to 'Edit', edit_opportunity_path(@opportunity), class: 'bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition duration-200' %>
        <%= link_to 'Back to Opportunities', opportunities_path, class: 'bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-200' %>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Opportunity Details</h3>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-600">Account</label>
            <p class="text-gray-900"><%= @opportunity.account_name || 'Not specified' %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Amount</label>
            <p class="text-gray-900 text-2xl font-bold text-green-600">
              <%= number_to_currency(@opportunity.amount) if @opportunity.amount %>
            </p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Owner</label>
            <p class="text-gray-900"><%= @opportunity.owner || 'Not assigned' %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Stage</label>
            <% stage_colors = {
              'prospecting' => 'bg-blue-100 text-blue-800',
              'qualification' => 'bg-yellow-100 text-yellow-800',
              'proposal' => 'bg-orange-100 text-orange-800',
              'negotiation' => 'bg-purple-100 text-purple-800',
              'closed_won' => 'bg-green-100 text-green-800',
              'closed_lost' => 'bg-red-100 text-red-800'
            } %>
            <span class="px-2 py-1 rounded-full text-sm font-medium <%= stage_colors[@opportunity.stage&.downcase] || 'bg-gray-100 text-gray-800' %>">
              <%= @opportunity.stage&.humanize || 'Not set' %>
            </span>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Timeline</h3>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-600">Close Date</label>
            <p class="text-gray-900">
              <%= @opportunity.closing_date&.strftime('%B %d, %Y') || 'Not set' %>
            </p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Created</label>
            <p class="text-gray-900"><%= @opportunity.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Last Updated</label>
            <p class="text-gray-900"><%= @opportunity.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
        </div>
      </div>
    </div>

    <% if @opportunity.comments.present? %>
      <div class="mt-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Comments</h3>
        <div class="bg-gray-50 p-4 rounded-md">
          <p class="text-gray-700"><%= simple_format(@opportunity.comments) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>