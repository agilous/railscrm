<div class="bg-white shadow-sm rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Opportunities</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Track your sales opportunities</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= link_to 'Create Opportunity', new_opportunity_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      </div>
    </div>

    <!-- Filter Form -->
    <div class="mt-6 bg-gray-50 p-6 rounded-lg border border-gray-200">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Filter Opportunities</h4>
      <%= form_with url: opportunities_path, method: :get, data: { turbo: false }, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Name Search -->
          <div>
            <%= f.label :name, "Opportunity Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, value: params[:name],
                placeholder: "Search by opportunity name...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Account Search -->
          <div>
            <%= f.label :account_name, "Account", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :account_name, value: params[:account_name],
                placeholder: "Search by account...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Owner Search -->
          <div>
            <%= f.label :owner, "Owner", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :owner, value: params[:owner],
                placeholder: "Search by owner...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Stage Filter -->
          <div>
            <%= f.label :stage, "Stage", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :stage,
                options_for_select([["All Stages", ""]] + @stages, params[:stage]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Type Filter -->
          <div>
            <%= f.label :type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :type,
                options_for_select([["All Types", ""]] + @types, params[:type]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Created Since Date -->
          <div>
            <%= f.label :created_since, "Created Since", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :created_since, value: params[:created_since],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <div class="flex items-center space-x-3">
            <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

            <% if params[:name].present? || params[:account_name].present? || params[:owner].present? || params[:stage].present? || params[:type].present? || params[:created_since].present? %>
              <%= link_to "Clear Filters", opportunities_path,
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% end %>
          </div>

          <span class="text-sm text-gray-500">
            <% filter_count = [params[:name], params[:account_name], params[:owner], params[:stage], params[:type], params[:created_since]].compact.reject(&:blank?).count %>
            <% if filter_count > 0 %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= filter_count %> filter<%= 's' if filter_count > 1 %> active
              </span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('opportunity_name', 'Opportunity', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('account_name', 'Account', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('amount', 'Amount', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('stage', 'Stage', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('owner', 'Owner', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('closing_date', 'Closing Date', current_sort: @current_sort, current_direction: @current_direction, path: opportunities_path) %>
                  </th>
                  <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @opportunities.each do |opportunity| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= link_to opportunity.opportunity_name, opportunity_path(opportunity), class: "text-blue-600 hover:text-blue-900" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= opportunity.account_name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <% if opportunity.amount.present? %>
                        <%= number_to_currency(opportunity.amount) %>
                      <% else %>
                        <span class="text-gray-400">-</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if opportunity.stage.present? %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                          <%= case opportunity.stage&.downcase
                              when 'prospecting' then 'bg-yellow-100 text-yellow-800'
                              when 'proposal', 'analysis', 'presentation' then 'bg-blue-100 text-blue-800'
                              when 'negotiation', 'final_review' then 'bg-orange-100 text-orange-800'
                              when 'closed_won' then 'bg-green-100 text-green-800'
                              when 'closed_lost' then 'bg-red-100 text-red-800'
                              else 'bg-gray-100 text-gray-800'
                              end %>">
                          <%= opportunity.stage.humanize %>
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= opportunity.owner %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <% if opportunity.closing_date.present? %>
                        <%= opportunity.closing_date.strftime("%b %d, %Y") %>
                      <% else %>
                        <span class="text-gray-400">-</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                      <%= link_to 'View', opportunity_path(opportunity), class: 'text-blue-600 hover:text-blue-900' %>
                      <%= link_to 'Edit', edit_opportunity_path(opportunity), class: 'text-indigo-600 hover:text-indigo-900' %>
                      <%= link_to 'Delete', opportunity_path(opportunity),
                          class: 'text-red-600 hover:text-red-900',
                          data: {
                            "turbo-method": "delete",
                            "turbo-confirm": "Are you sure you want to delete this opportunity?"
                          } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <% if @opportunities.any? %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <strong><%= @opportunities.offset_value + 1 %></strong> to
          <strong><%= [@opportunities.offset_value + @opportunities.length, @opportunities.total_count].min %></strong> of
          <strong><%= @opportunities.total_count %></strong> opportunities
          <% if params[:name].present? || params[:account_name].present? || params[:owner].present? || params[:stage].present? || params[:type].present? || params[:created_since].present? %>
            <span class="text-blue-600">(filtered)</span>
          <% end %>
        </div>
        <div class="flex space-x-2">
          <%= paginate @opportunities, params: request.query_parameters %>
        </div>
      </div>
    <% else %>
      <div class="mt-6 text-center py-8">
        <p class="text-gray-500">No opportunities found matching your filters.</p>
        <% if params[:name].present? || params[:account_name].present? || params[:owner].present? || params[:stage].present? || params[:type].present? || params[:created_since].present? %>
          <%= link_to "Clear Filters", opportunities_path,
              class: "mt-2 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
