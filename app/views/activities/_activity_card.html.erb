<div class="bg-gray-50 rounded-lg p-4 relative group"
     data-controller="calendar-links"
     data-calendar-links-title-value="<%= activity.activity_type %>: <%= activity.title %>"
     data-calendar-links-description-value="<%= activity.description %>"
     data-calendar-links-location-value=""
     data-calendar-links-start-time-value="<%= activity.due_date&.in_time_zone&.iso8601 %>"
     data-calendar-links-duration-value="<%= activity.duration || 60 %>">

  <!-- Delete button (X) in absolute top right -->
  <%= link_to contact_activity_path(@contact, activity),
      method: :delete,
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to delete this activity?"
      },
      class: "text-gray-600 hover:text-red-600 transition-colors",
      style: "position: absolute; top: 12px; right: 12px; z-index: 10;" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  <% end %>

  <div class="flex justify-between items-start">
    <div class="flex-1 pr-12">
      <p class="text-sm font-medium text-gray-900">
        <%= activity.activity_type %>: <%= activity.title %>
        <% if activity.priority.present? %>
          <span class="ml-2 text-xs px-2 py-0.5 rounded-full <%=
            case activity.priority
            when 'High' then 'bg-red-100 text-red-800'
            when 'Medium' then 'bg-yellow-100 text-yellow-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
            <%= activity.priority %>
          </span>
        <% end %>
      </p>

      <% if activity.description.present? %>
        <p class="text-sm text-gray-600 mt-1"><%= activity.description %></p>
      <% end %>

      <% if activity.due_date.present? %>
        <div class="flex items-center gap-4 mt-2">
          <p class="text-xs text-gray-500">
            <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= activity.due_date.strftime("%B %d, %Y at %I:%M %p") %>
          </p>

          <!-- Calendar links dropdown -->
          <% if activity.due_date.present? %>
            <div class="relative inline-block text-left" data-controller="dropdown">
              <button type="button"
                      data-action="click->dropdown#toggle"
                      class="text-xs text-blue-600 hover:text-blue-800 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Add to Calendar
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>

              <div data-dropdown-target="menu"
                   class="hidden absolute left-0 z-10 mt-1 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
                <div class="py-1" role="menu">
                  <a href="#"
                     data-action="click->calendar-links#generateICS"
                     class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100"
                     role="menuitem">
                    Apple Calendar / Outlook
                  </a>
                  <a href="#"
                     data-action="click->calendar-links#generateGoogleCalendar"
                     class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100"
                     role="menuitem">
                    Google Calendar
                  </a>
                  <a href="#"
                     data-action="click->calendar-links#generateOutlookWeb"
                     class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100"
                     role="menuitem">
                    Outlook.com
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if activity.user.present? %>
        <p class="text-xs text-gray-500 mt-1">
          Assigned to: <%= activity.user.full_name %>
        </p>
      <% end %>
    </div>

    <!-- Status badge -->
    <div class="mr-16">
      <% if activity.completed_at.present? %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Done
        </span>
      <% elsif activity.due_date && activity.due_date < DateTime.current %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
          Overdue
        </span>
      <% else %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          Scheduled
        </span>
      <% end %>
    </div>
  </div>
</div>