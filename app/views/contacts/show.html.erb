<div class="max-w-6xl mx-auto">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @contact.full_name %>
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Contact created on <%= @contact.created_at.strftime("%B %d, %Y") %>
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
      <%= link_to 'Edit', edit_contact_path(@contact),
          class: 'inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      <%= link_to 'Delete', contact_path(@contact),
          class: 'inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500',
          data: {
            "turbo-method": "delete",
            "turbo-confirm": "Are you sure you want to delete this contact?"
          } %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Contact Details -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Contact Details</h3>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Full Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contact.full_name %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Company</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @contact.company.present? ? @contact.company : content_tag(:span, "No company", class: "text-gray-400") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @contact.email, "mailto:#{@contact.email}", class: "text-blue-600 hover:text-blue-900" %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Phone</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @contact.phone.present? %>
                  <%= link_to @contact.phone, "tel:#{@contact.phone}", class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">No phone number</span>
                <% end %>
              </dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Address</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @contact.address.present? || @contact.city.present? || @contact.state.present? || @contact.zip.present? %>
                  <%= @contact.address if @contact.address.present? %><br>
                  <% if @contact.city.present? || @contact.state.present? || @contact.zip.present? %>
                    <%= [@contact.city, @contact.state].compact.join(', ') %><%= " #{@contact.zip}" if @contact.zip.present? %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">No address provided</span>
                <% end %>
              </dd>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Information Card -->
      <div class="bg-white shadow-sm rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Additional Information</h3>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @contact.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @contact.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Contact ID</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono">#<%= @contact.id %></dd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Section -->
    <div>
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Quick Actions</h3>

          <div class="space-y-3">
            <%= link_to edit_contact_path(@contact),
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              Edit Contact
            <% end %>

            <% if @contact.email.present? %>
              <%= mail_to @contact.email,
                  class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                Send Email
              <% end %>
            <% end %>

            <% if @contact.phone.present? %>
              <%= link_to "tel:#{@contact.phone}",
                  class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                Call Contact
              <% end %>
            <% end %>

            <hr class="my-4 border-gray-200">

            <%= link_to contact_path(@contact),
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: {
                  "turbo-method": "delete",
                  "turbo-confirm": "Are you sure you want to delete this contact? This action cannot be undone."
                } do %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              Delete Contact
            <% end %>
          </div>
        </div>
      </div>

      <!-- Contact Stats -->
      <div class="bg-white shadow-sm rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Contact Summary</h3>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Account Age</dt>
              <dd class="text-sm text-gray-900">
                <%= distance_of_time_in_words(@contact.created_at, Time.current) %>
              </dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Last Activity</dt>
              <dd class="text-sm text-gray-900">
                <%= time_ago_in_words(@contact.updated_at) %> ago
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>