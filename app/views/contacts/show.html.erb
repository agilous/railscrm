<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex items-center space-x-4">
      <!-- Avatar Circle -->
      <div class="h-16 w-16 rounded-full bg-blue-500 flex items-center justify-center text-white text-2xl font-bold">
        <%= @contact.first_name[0].upcase %><%= @contact.last_name[0].upcase %>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @contact.full_name %></h1>
        <p class="text-sm text-gray-500">
          <%= @contact.company.present? ? @contact.company : "No company" %> • 
          <%= mail_to @contact.email, @contact.email, class: "text-blue-600 hover:text-blue-800" %>
        </p>
      </div>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
      <%= link_to 'Edit', edit_contact_path(@contact),
          class: 'inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
      <%= link_to 'Delete', contact_path(@contact),
          class: 'inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700',
          data: { "turbo-method": "delete", "turbo-confirm": "Are you sure?" } %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column - Summary Info -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Contact Details Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Details</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Phone</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @contact.phone.present? %>
                  <%= link_to @contact.phone, "tel:#{@contact.phone}", class: "text-blue-600 hover:text-blue-800" %>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Email</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= mail_to @contact.email, @contact.email, class: "text-blue-600 hover:text-blue-800" %>
              </dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Company</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @contact.company.present? %>
                  <% if account = contact_related_account %>
                    <%= link_to @contact.company, account_path(account), class: "text-blue-600 hover:text-blue-800" %>
                  <% else %>
                    <%= @contact.company %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Address</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @contact.address.present? || @contact.city.present? %>
                  <%= @contact.address if @contact.address.present? %><br>
                  <%= [@contact.city, @contact.state].compact.join(', ') %>
                  <%= @contact.zip if @contact.zip.present? %>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Created</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @contact.created_at.strftime("%B %d, %Y") %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Quick Actions Card -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-2">
            <button onclick="showNoteModal()" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md flex items-center">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
              </svg>
              Add Note
            </button>
            <button onclick="showScheduleActivityModal()" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md flex items-center">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Schedule Activity
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Activity History with Tabs -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg">
        <!-- Tab Navigation -->
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-4" aria-label="Tabs">
            <button onclick="switchTab('all')" id="all-tab" class="tab-button active-tab py-2 px-3 text-center border-b-2 font-medium text-sm">
              All
            </button>
            <button onclick="switchTab('notes')" id="notes-tab" class="tab-button py-2 px-3 text-center border-b-2 font-medium text-sm">
              Notes (<%= @contact.notes.count %>)
            </button>
            <button onclick="switchTab('activities')" id="activities-tab" class="tab-button py-2 px-3 text-center border-b-2 font-medium text-sm">
              Activities (<%= @contact.activities.count %>)
            </button>
            <button onclick="switchTab('deals')" id="deals-tab" class="tab-button py-2 px-3 text-center border-b-2 font-medium text-sm">
              Deals (<%= @contact.deals.count %>)
            </button>
          </nav>
        </div>

        <!-- Tab Content -->
        <div class="px-4 py-5 sm:p-6">
          <!-- All Tab -->
          <div id="all-content" class="tab-content">
            <% all_items = [] %>
            <% all_items += @contact.notes.map { |n| { type: 'note', item: n, date: n.created_at } } %>
            <% all_items += @contact.activities.map { |a| { type: 'activity', item: a, date: a.created_at } } %>
            <% all_items += @contact.deals.map { |d| { type: 'deal', item: d, date: d.created_at } } %>
            <% all_items = all_items.sort_by { |i| i[:date] }.reverse %>
            
            <% if all_items.any? %>
              <div class="flow-root">
                <ul class="-mb-8">
                  <% all_items.each_with_index do |item, index| %>
                    <li>
                      <div class="relative pb-8">
                        <% if index != all_items.length - 1 %>
                          <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"></span>
                        <% end %>
                        <div class="relative flex space-x-3">
                          <div>
                            <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white
                              <%= case item[:type]
                                  when 'note' then 'bg-blue-500'
                                  when 'activity' then 'bg-green-500'
                                  when 'deal' then 'bg-purple-500'
                                  end %>">
                              <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <% case item[:type] %>
                                <% when 'note' %>
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                                <% when 'activity' %>
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                <% when 'deal' %>
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                <% end %>
                              </svg>
                            </span>
                          </div>
                          <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                            <div>
                              <p class="text-sm text-gray-900">
                                <% case item[:type] %>
                                <% when 'note' %>
                                  <span class="font-medium">Note added:</span> <%= truncate(item[:item].content, length: 100) %>
                                <% when 'activity' %>
                                  <span class="font-medium"><%= item[:item].activity_type %>:</span>
                                  <% if item[:item].due_date.present? %>
                                    <a href="#" class="text-blue-600 hover:text-blue-800"
                                       data-controller="calendar-links"
                                       data-calendar-links-title-value="<%= item[:item].activity_type %>: <%= item[:item].title %>"
                                       data-calendar-links-description-value="<%= item[:item].description %>"
                                       data-calendar-links-start-time-value="<%= item[:item].due_date&.iso8601 %>"
                                       data-calendar-links-duration-value="<%= item[:item].duration || 60 %>">
                                      <%= item[:item].title %>
                                    </a>
                                  <% else %>
                                    <%= item[:item].title %>
                                  <% end %>
                                  <% if item[:item].completed_at.present? %>
                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Done</span>
                                  <% elsif item[:item].due_date && item[:item].due_date < Date.current %>
                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Overdue</span>
                                  <% end %>
                                <% when 'deal' %>
                                  <span class="font-medium">Deal:</span> 
                                  <%= link_to item[:item].opportunity_name, opportunity_path(item[:item]), class: "text-blue-600 hover:text-blue-800" %>
                                  <span class="text-gray-500">• <%= number_to_currency(item[:item].amount || 0) %></span>
                                <% end %>
                              </p>
                            </div>
                            <div class="text-right text-sm whitespace-nowrap text-gray-500">
                              <%= time_ago_in_words(item[:date]) %> ago
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No activity yet</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by adding a note or scheduling an activity.</p>
              </div>
            <% end %>
          </div>

          <!-- Notes Tab -->
          <div id="notes-content" class="tab-content hidden">
            <% if @contact.notes.any? %>
              <div class="space-y-4">
                <% @contact.notes.order(created_at: :desc).each do |note| %>
                  <div class="bg-gray-50 rounded-lg p-4">
                    <div class="flex justify-between items-start">
                      <p class="text-sm text-gray-900"><%= note.content %></p>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(note.created_at) %> ago</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">No notes yet</p>
            <% end %>
          </div>

          <!-- Activities Tab -->
          <div id="activities-content" class="tab-content hidden">
            <% if @contact.activities.any? %>
              <div class="space-y-4">
                <% @contact.activities.order(created_at: :desc).each do |activity| %>
                  <%= render 'activities/activity_card', activity: activity %>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">No activities scheduled</p>
            <% end %>
          </div>

          <!-- Deals Tab -->
          <div id="deals-content" class="tab-content hidden">
            <% if @contact.deals.any? %>
              <div class="space-y-4">
                <% @contact.deals.order(created_at: :desc).each do |deal| %>
                  <div class="bg-gray-50 rounded-lg p-4">
                    <div class="flex justify-between items-start">
                      <div>
                        <p class="text-sm font-medium text-gray-900">
                          <%= link_to deal.opportunity_name, opportunity_path(deal), class: "text-blue-600 hover:text-blue-800" %>
                        </p>
                        <p class="text-sm text-gray-600">
                          <%= deal.account_name %> • <%= number_to_currency(deal.amount || 0) %>
                        </p>
                        <% if deal.closing_date.present? %>
                          <p class="text-xs text-gray-500 mt-2">Expected close: <%= deal.closing_date.strftime("%B %d, %Y") %></p>
                        <% end %>
                      </div>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                        <%= case deal.stage
                            when 'closed_won' then 'bg-green-100 text-green-800'
                            when 'closed_lost' then 'bg-red-100 text-red-800'
                            when 'prospecting' then 'bg-gray-100 text-gray-800'
                            when 'negotiation', 'final_review' then 'bg-yellow-100 text-yellow-800'
                            else 'bg-blue-100 text-blue-800'
                            end %>">
                        <%= deal.stage&.humanize || 'Unknown' %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">No deals associated</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/note_modal' %>
<%= render 'shared/activity_modal' %>

<style>
  .tab-button {
    border-color: transparent;
    color: #6B7280;
  }
  .tab-button:hover {
    color: #374151;
    border-color: #E5E7EB;
  }
  .active-tab {
    color: #2563EB;
    border-color: #2563EB;
  }
</style>

<script>
  function switchTab(tabName) {
    // Hide all content
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    
    // Remove active class from all tabs
    document.querySelectorAll('.tab-button').forEach(tab => {
      tab.classList.remove('active-tab');
    });
    
    // Show selected content
    document.getElementById(tabName + '-content').classList.remove('hidden');
    
    // Add active class to selected tab
    document.getElementById(tabName + '-tab').classList.add('active-tab');
  }
  
  function showNoteModal() {
    if (typeof window.openNoteModal === 'function') {
      window.openNoteModal();
    }
  }

  function showScheduleActivityModal() {
    if (typeof window.openActivityModal === 'function') {
      window.openActivityModal();
    }
  }
</script>