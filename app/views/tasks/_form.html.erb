<%= form_with(model: task, local: true, class: "space-y-6") do |form| %>
  <% if task.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6">
      <h2 class="font-semibold mb-2"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul class="list-disc list-inside">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :due_date, "Due date", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.date_field :due_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :priority, 
        options_for_select([
          ['High', 'high'],
          ['Medium', 'medium'],
          ['Low', 'low']
        ], task.priority), 
        { include_blank: 'Select priority' },
        { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
  </div>

  <div>
    <%= form.label :assignee_id, "Assignee", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :assignee_id, 
        User.all, :id, :email,
        { include_blank: 'Select assignee' },
        { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :completed, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
    <%= form.label :completed, class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex justify-between">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition duration-200" %>
    <%= link_to 'Cancel', tasks_path, class: 'bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-md transition duration-200' %>
  </div>
<% end %>