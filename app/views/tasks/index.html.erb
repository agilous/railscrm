<div class="bg-white shadow-sm rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Tasks</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Manage your task assignments</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= link_to 'Create Task', new_task_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      </div>
    </div>

    <!-- Filter Form -->
    <div class="mt-6 bg-gray-50 p-6 rounded-lg border border-gray-200">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Filter Tasks</h4>
      <%= form_with url: tasks_path, method: :get, data: { turbo: false }, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Title Search -->
          <div>
            <%= f.label :title, "Task Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :title, value: params[:title],
                placeholder: "Search by title...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Status Filter -->
          <div>
            <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :status,
                options_for_select([["All Statuses", ""], ["Pending", "pending"], ["Completed", "completed"]], params[:status]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Priority Filter -->
          <div>
            <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :priority,
                options_for_select([["All Priorities", ""]] + @priorities, params[:priority]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Assignee Filter -->
          <div>
            <%= f.label :assignee_id, "Assigned To", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :assignee_id,
                options_for_select([["All Users", ""]] + @users.map { |u| [u.full_name, u.id] }, params[:assignee_id]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Due After Date -->
          <div>
            <%= f.label :due_after, "Due After", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :due_after, value: params[:due_after],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <!-- Due Before Date -->
          <div>
            <%= f.label :due_before, "Due Before", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :due_before, value: params[:due_before],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <div class="flex items-center space-x-3">
            <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

            <% if params[:title].present? || params[:status].present? || params[:priority].present? || params[:assignee_id].present? || params[:due_after].present? || params[:due_before].present? %>
              <%= link_to "Clear Filters", tasks_path,
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% end %>
          </div>

          <span class="text-sm text-gray-500">
            <% filter_count = [params[:title], params[:status], params[:priority], params[:assignee_id], params[:due_after], params[:due_before]].compact.reject(&:blank?).count %>
            <% if filter_count > 0 %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= filter_count %> filter<%= 's' if filter_count > 1 %> active
              </span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('title', 'Task', current_sort: @current_sort, current_direction: @current_direction, path: tasks_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('assignee_id', 'Assigned To', current_sort: @current_sort, current_direction: @current_direction, path: tasks_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('due_date', 'Due Date', current_sort: @current_sort, current_direction: @current_direction, path: tasks_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('priority', 'Priority', current_sort: @current_sort, current_direction: @current_direction, path: tasks_path) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('completed', 'Status', current_sort: @current_sort, current_direction: @current_direction, path: tasks_path) %>
                  </th>
                  <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @tasks.each do |task| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= link_to task.title, task_path(task), class: "text-blue-600 hover:text-blue-900" %>
                      <% if task.description.present? %>
                        <p class="text-xs text-gray-500 mt-1"><%= truncate(task.description, length: 50) %></p>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= task.assignee.full_name || task.assignee.email %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <% if task.due_date.present? %>
                        <% days_until = (task.due_date.to_date - Date.current).to_i %>
                        <span class="<%= days_until < 0 ? 'text-red-600 font-semibold' : days_until <= 2 ? 'text-orange-600' : 'text-gray-900' %>">
                          <%= task.due_date.strftime("%b %d, %Y") %>
                        </span>
                        <% if days_until < 0 %>
                          <p class="text-xs text-red-500">Overdue</p>
                        <% elsif days_until <= 2 %>
                          <p class="text-xs text-orange-500">Due soon</p>
                        <% end %>
                      <% else %>
                        <span class="text-gray-400">-</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if task.priority.present? %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                          <%= case task.priority&.downcase
                              when 'high' then 'bg-red-100 text-red-800'
                              when 'medium' then 'bg-yellow-100 text-yellow-800'
                              when 'low' then 'bg-green-100 text-green-800'
                              else 'bg-gray-100 text-gray-800'
                              end %>">
                          <%= task.priority.capitalize %>
                        </span>
                      <% else %>
                        <span class="text-gray-400">-</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if task.completed? %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                          Completed
                        </span>
                      <% else %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                          Pending
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                      <%= link_to 'View', task_path(task), class: 'text-blue-600 hover:text-blue-900' %>
                      <%= link_to 'Edit', edit_task_path(task), class: 'text-indigo-600 hover:text-indigo-900' %>
                      <%= link_to 'Delete', task_path(task),
                          class: 'text-red-600 hover:text-red-900',
                          data: {
                            "turbo-method": "delete",
                            "turbo-confirm": "Are you sure you want to delete this task?"
                          } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <% if @tasks.any? %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <strong><%= @tasks.offset_value + 1 %></strong> to
          <strong><%= [@tasks.offset_value + @tasks.length, @tasks.total_count].min %></strong> of
          <strong><%= @tasks.total_count %></strong> tasks
          <% if params[:title].present? || params[:status].present? || params[:priority].present? || params[:assignee_id].present? || params[:due_after].present? || params[:due_before].present? %>
            <span class="text-blue-600">(filtered)</span>
          <% end %>
        </div>
        <div class="flex space-x-2">
          <%= paginate @tasks, params: request.query_parameters %>
        </div>
      </div>
    <% else %>
      <div class="mt-6 text-center py-8">
        <p class="text-gray-500">No tasks found matching your filters.</p>
        <% if params[:title].present? || params[:status].present? || params[:priority].present? || params[:assignee_id].present? || params[:due_after].present? || params[:due_before].present? %>
          <%= link_to "Clear Filters", tasks_path,
              class: "mt-2 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
