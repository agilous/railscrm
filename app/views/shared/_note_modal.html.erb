<!-- Enhanced Note Creation Modal with Multi-Association Support -->
<div id="noteModal"
     class="hidden fixed z-50 inset-0 overflow-y-auto"
     data-controller="note-modal"
     data-note-modal-target="modal"
     <%= note_modal_html_attributes %>>
  <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!-- Background overlay -->
    <div class="fixed inset-0 bg-gray-500/75 transition-opacity" data-action="click->note-modal#close"></div>

    <!-- This span helps vertically center the modal -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <!-- Modal panel -->
    <div class="relative inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full z-10">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4 max-h-[70vh] overflow-y-auto">
        <div class="sm:flex sm:items-start">
          <div class="mx-auto shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              Add Note
            </h3>
            
            <form id="noteForm" class="mt-4" data-note-modal-target="form" data-action="submit->note-modal#submit">
              <!-- Note Content -->
              <div class="mb-4">
                <label for="note_content" class="block text-sm font-medium text-gray-700">
                  Note Content
                </label>
                <textarea 
                  id="note_content" 
                  name="note[content]"
                  data-note-modal-target="content"
                  rows="4" 
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"
                  placeholder="Enter your note here..."
                  required></textarea>
              </div>
              
              <!-- Multi-Association Section -->
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Also attach this note to:
                </label>
                
                <div class="space-y-2 max-h-48 overflow-y-auto border rounded-md p-3">
                  <% if defined?(@contact) && @contact.persisted? %>
                    <!-- Primary entity (current context) is already selected -->
                    <div class="flex items-center bg-blue-50 p-2 rounded">
                      <input type="checkbox" checked disabled class="mr-2">
                      <span class="text-sm font-medium text-blue-700">
                        <%= @contact.full_name %> (Current Contact)
                      </span>
                    </div>
                    
                    <!-- Related Deals/Opportunities -->
                    <% @contact.deals.each do |deal| %>
                      <div class="flex items-center hover:bg-gray-50 p-2 rounded">
                        <input 
                          type="checkbox" 
                          id="notable_opportunity_<%= deal.id %>"
                          name="note[notable_ids][]" 
                          value="Opportunity-<%= deal.id %>"
                          class="mr-2 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                        <label for="notable_opportunity_<%= deal.id %>" class="text-sm text-gray-700 cursor-pointer flex-1">
                          <span class="font-medium">Deal:</span> <%= deal.opportunity_name %>
                          <span class="text-gray-500">(<%= number_to_currency(deal.amount) %>)</span>
                        </label>
                      </div>
                    <% end %>
                    
                    <!-- Related Account -->
                    <% if account = contact_related_account %>
                        <div class="flex items-center hover:bg-gray-50 p-2 rounded">
                          <input
                            type="checkbox"
                            id="notable_account_<%= account.id %>"
                            name="note[notable_ids][]"
                            value="Account-<%= account.id %>"
                            class="mr-2 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                          <label for="notable_account_<%= account.id %>" class="text-sm text-gray-700 cursor-pointer flex-1">
                            <span class="font-medium">Company:</span> <%= account.name %>
                          </label>
                        </div>
                    <% end %>
                    
                  <% elsif defined?(@opportunity) && @opportunity.persisted? %>
                    <!-- For Opportunity context -->
                    <div class="flex items-center bg-blue-50 p-2 rounded">
                      <input type="checkbox" checked disabled class="mr-2">
                      <span class="text-sm font-medium text-blue-700">
                        <%= @opportunity.opportunity_name %> (Current Deal)
                      </span>
                    </div>
                    
                    <!-- Related Contact -->
                    <% if contact = opportunity_related_contact %>
                        <div class="flex items-center hover:bg-gray-50 p-2 rounded">
                          <input
                            type="checkbox"
                            id="notable_contact_<%= contact.id %>"
                            name="note[notable_ids][]"
                            value="Contact-<%= contact.id %>"
                            class="mr-2 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                          <label for="notable_contact_<%= contact.id %>" class="text-sm text-gray-700 cursor-pointer flex-1">
                            <span class="font-medium">Contact:</span> <%= contact.full_name %>
                          </label>
                        </div>
                    <% end %>
                    
                    <!-- Related Account -->
                    <% if account = opportunity_related_account %>
                        <div class="flex items-center hover:bg-gray-50 p-2 rounded">
                          <input
                            type="checkbox"
                            id="notable_account_<%= account.id %>"
                            name="note[notable_ids][]"
                            value="Account-<%= account.id %>"
                            class="mr-2 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                          <label for="notable_account_<%= account.id %>" class="text-sm text-gray-700 cursor-pointer flex-1">
                            <span class="font-medium">Account:</span> <%= account.name %>
                          </label>
                        </div>
                    <% end %>
                  <% end %>
                  
                </div>
                
                <p class="mt-2 text-xs text-gray-500">
                  Select additional entities to attach this note to. The note will appear in all selected locations.
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button 
          type="button"
          data-action="click->note-modal#submit"
          class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
          Save Note
        </button>
        <button 
          type="button"
          data-action="click->note-modal#close"
          class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>