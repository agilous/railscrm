<%= form_with model: @lead, local: true, class: "space-y-6" do |f| %>
  <% if @lead.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <h3 class="text-sm font-medium">Please fix the following errors:</h3>
      <ul class="mt-2 text-sm list-disc list-inside">
        <% @lead.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Lead Information</h3>
      
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :company, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :company, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :lead_owner, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :lead_owner, options_for_select(@lead_owner.map { |owner| [owner, owner] }, @lead.lead_owner), 
              { prompt: "Select Owner" }, 
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>

        <div>
          <%= f.label :interested_in, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :interested_in, options_for_select(@lead_interests, @lead.interested_in), 
              { prompt: "Select Interest" }, 
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>

        <div>
          <%= f.label :lead_status, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :lead_status, options_for_select(@lead_status, @lead.lead_status), 
              { prompt: "Select Status" }, 
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>

        <div>
          <%= f.label :lead_source, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :lead_source, options_for_select(@lead_sources, @lead.lead_source), 
              { prompt: "Select Source" }, 
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :comments, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :comments, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Address Information</h3>
      
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :address, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :city, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :state, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :zip, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :zip, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancel', leads_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>