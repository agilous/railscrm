<div class="bg-white shadow-sm rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Leads</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Manage your sales leads</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= link_to 'Create Lead', new_lead_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      </div>
    </div>
    
    <!-- Filter Form -->
    <div class="mt-6 bg-gray-50 p-6 rounded-lg border border-gray-200">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Filter Leads</h4>
      <%= form_with url: leads_path, method: :get, local: true, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Name Search -->
          <div>
            <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, value: params[:name], 
                placeholder: "Search by name...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          
          <!-- Company Search -->
          <div>
            <%= f.label :company, "Company", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :company, value: params[:company], 
                placeholder: "Search by company...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          
          <!-- Status Filter -->
          <div>
            <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :status, 
                options_for_select([["All Statuses", ""]] + @lead_statuses, params[:status]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          
          <!-- Assigned To Filter -->
          <div>
            <%= f.label :assigned_to, "Assigned To", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :assigned_to,
                options_for_select([["All Users", ""]] + @users.map { |u| [u.full_name, u.id] }, params[:assigned_to]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          
          <!-- Created Since Date -->
          <div>
            <%= f.label :created_since, "Created Since", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :created_since, value: params[:created_since],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          
          <!-- Created Before Date -->
          <div>
            <%= f.label :created_before, "Created Before", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :created_before, value: params[:created_before],
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>
        
        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <div class="flex items-center space-x-3">
            <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            
            <% if params[:name].present? || params[:company].present? || params[:created_since].present? || params[:created_before].present? || params[:status].present? || params[:assigned_to].present? %>
              <%= link_to "Clear Filters", leads_path, 
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% end %>
          </div>
          
          <span class="text-sm text-gray-500">
            <% filter_count = [params[:name], params[:company], params[:created_since], params[:created_before], params[:status], params[:assigned_to]].compact.reject(&:blank?).count %>
            <% if filter_count > 0 %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= filter_count %> filter<%= 's' if filter_count > 1 %> active
              </span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('first_name', 'Name', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('email', 'Email', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('company', 'Company', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('lead_status', 'Status', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('assigned_to', 'Assigned to', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sortable_header('created_at', 'Created', current_sort: @current_sort, current_direction: @current_direction) %>
                  </th>
                  <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @leads.each do |lead| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= link_to lead.full_name, lead_path(lead), class: "text-blue-600 hover:text-blue-900" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= mail_to lead.email, lead.email, class: "text-blue-600 hover:text-blue-900" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= lead.company %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                        <%= case lead.lead_status&.downcase
                            when 'new' then 'bg-yellow-100 text-yellow-800'
                            when 'contacted' then 'bg-blue-100 text-blue-800'
                            when 'qualified' then 'bg-green-100 text-green-800'
                            when 'disqualified' then 'bg-red-100 text-red-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= lead.lead_status&.capitalize || 'Unknown' %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= lead.assigned_to&.full_name || lead.lead_owner || 'Unassigned' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <span title="<%= lead.created_at.strftime("%B %d, %Y at %I:%M %p") %>">
                        <%= lead.created_at.strftime("%b %d, %Y") %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                      <%= link_to 'View', lead_path(lead), class: 'text-blue-600 hover:text-blue-900' %>
                      <%= link_to 'Edit', edit_lead_path(lead), class: 'text-indigo-600 hover:text-indigo-900' %>
                      <%= link_to 'Delete', lead_path(lead), 
                          class: 'text-red-600 hover:text-red-900',
                          data: { 
                            "turbo-method": "delete",
                            "turbo-confirm": "Are you sure you want to delete this lead?"
                          } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <% if @leads.any? %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <strong><%= @leads.offset_value + 1 %></strong> to 
          <strong><%= [@leads.offset_value + @leads.length, @leads.total_count].min %></strong> of 
          <strong><%= @leads.total_count %></strong> leads
          <% if params[:name].present? || params[:company].present? || params[:created_since].present? || params[:created_before].present? || params[:status].present? || params[:assigned_to].present? %>
            <span class="text-blue-600">(filtered)</span>
          <% end %>
        </div>
        <div class="flex space-x-2">
          <%= paginate @leads, params: request.query_parameters %>
        </div>
      </div>
    <% else %>
      <div class="mt-6 text-center py-8">
        <p class="text-gray-500">No leads found matching your filters.</p>
        <% if params[:name].present? || params[:company].present? || params[:created_since].present? || params[:created_before].present? || params[:status].present? || params[:assigned_to].present? %>
          <%= link_to "Clear Filters", leads_path, 
              class: "mt-2 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>