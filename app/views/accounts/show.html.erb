<div class="max-w-6xl mx-auto">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @account.name %>
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Account created on <%= @account.created_at.strftime("%B %d, %Y") %>
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
      <%= link_to 'Edit', edit_account_path(@account),
          class: 'inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      <%= link_to 'Delete', account_path(@account),
          class: 'inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500',
          data: {
            "turbo-method": "delete",
            "turbo-confirm": "Are you sure you want to delete this account?"
          } %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Account Details -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Account Details</h3>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Account Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @account.name %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Assigned To</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @account.assigned_to.present? ? @account.assigned_to : content_tag(:span, "Unassigned", class: "text-gray-400") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @account.email.present? %>
                  <%= link_to @account.email, "mailto:#{@account.email}", class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">No email</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Phone</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @account.phone.present? %>
                  <%= link_to @account.phone, "tel:#{@account.phone}", class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">No phone number</span>
                <% end %>
              </dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Website</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% safe_url = safe_external_url(@account.website) %>
                <% if safe_url.present? %>
                  <%= link_to @account.website, safe_url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">No website</span>
                <% end %>
              </dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Address</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @account.address.present? || @account.city.present? || @account.state.present? || @account.zip.present? %>
                  <%= @account.address if @account.address.present? %><br>
                  <% if @account.city.present? || @account.state.present? || @account.zip.present? %>
                    <%= [@account.city, @account.state].compact.join(', ') %><%= " #{@account.zip}" if @account.zip.present? %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">No address provided</span>
                <% end %>
              </dd>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Information Card -->
      <div class="bg-white shadow-sm rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Additional Information</h3>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @account.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @account.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Account ID</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono">#<%= @account.id %></dd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Section -->
    <div>
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Quick Actions</h3>

          <div class="space-y-3">
            <%= link_to edit_account_path(@account),
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              Edit Account
            <% end %>

            <% if @account.email.present? %>
              <%= mail_to @account.email,
                  class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                Send Email
              <% end %>
            <% end %>

            <% if @account.phone.present? %>
              <%= link_to "tel:#{@account.phone}",
                  class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                Call Account
              <% end %>
            <% end %>

            <% safe_url = safe_external_url(@account.website) %>
            <% if safe_url.present? %>
              <%= link_to safe_url,
                  target: "_blank", rel: "noopener noreferrer",
                  class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd" />
                </svg>
                Visit Website
              <% end %>
            <% end %>

            <hr class="my-4 border-gray-200">

            <%= link_to account_path(@account),
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: {
                  "turbo-method": "delete",
                  "turbo-confirm": "Are you sure you want to delete this account? This action cannot be undone."
                } do %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              Delete Account
            <% end %>
          </div>
        </div>
      </div>

      <!-- Account Stats -->
      <div class="bg-white shadow-sm rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Account Summary</h3>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Account Age</dt>
              <dd class="text-sm text-gray-900">
                <%= distance_of_time_in_words(@account.created_at, Time.current) %>
              </dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Last Activity</dt>
              <dd class="text-sm text-gray-900">
                <%= time_ago_in_words(@account.updated_at) %> ago
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
