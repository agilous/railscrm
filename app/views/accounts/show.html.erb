<div class="max-w-4xl mx-auto py-8">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @account.name %></h1>
      <div class="flex space-x-3">
        <%= link_to 'Edit', edit_account_path(@account), class: 'bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition duration-200' %>
        <%= link_to 'Back to Accounts', accounts_path, class: 'bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-200' %>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Contact Information</h3>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-600">Email</label>
            <p class="text-gray-900"><%= @account.email || 'Not provided' %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Phone</label>
            <p class="text-gray-900"><%= @account.phone || 'Not provided' %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Website</label>
            <p class="text-gray-900"><%= @account.website || 'Not provided' %></p>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Additional Information</h3>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-600">Created</label>
            <p class="text-gray-900"><%= @account.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600">Last Updated</label>
            <p class="text-gray-900"><%= @account.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>