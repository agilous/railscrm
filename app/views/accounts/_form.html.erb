<%= form_with model: @account, local: true, class: "space-y-6" do |f| %>
  <% if @account.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <h3 class="text-sm font-medium">Please fix the following errors:</h3>
      <ul class="mt-2 text-sm list-disc list-inside">
        <% @account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Account Information</h3>

      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <%= f.label :name, "Account Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "Acme Corporation" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "contact@acme.com" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "+1 (555) 123-4567" %>
        </div>

        <div>
          <%= f.label :website, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :website,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "www.acme.com" %>
        </div>

        <div>
          <%= f.label :assigned_to, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :assigned_to,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "Sales Rep Name" %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Address Information</h3>

      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <%= f.label :address, "Street Address", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :address,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "123 Main Street" %>
        </div>

        <div>
          <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :city,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "San Francisco" %>
        </div>

        <div>
          <%= f.label :state, "State / Province", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :state,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "CA" %>
        </div>

        <div>
          <%= f.label :zip, "ZIP / Postal Code", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :zip,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "94102" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancel', accounts_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit @account.new_record? ? "Create Account" : "Update Account",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
